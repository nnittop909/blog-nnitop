<h1>Listing posts</h1>
  <% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%= post.body %></p>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> | 
      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  <% end %>

<br>
<br>
<%= link_to 'New Post', new_post_path %>
